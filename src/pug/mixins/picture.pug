mixin picture(desktopSrc, tabletSrc, mobileSrc, alt)
        picture
                source(srcset=desktopSrc, media="(min-width: 992px)" type="image/png")
                source(srcset=tabletSrc, media="(min-width: 576px) and (max-width: 991px)" type="image/png")
                source(srcset=mobileSrc, media="(max-width: 575px)" type="image/png")
                img(src=desktopSrc, alt=alt)